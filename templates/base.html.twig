<!doctype html>
<html lang="fr">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">

		<title>
			{% block title %}App
			{% endblock %}
		</title>

		{% block stylesheets %}
			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
		{% endblock %}
	</head>
	<body>
		<nav class="navbar navbar-light bg-light mb-4">
			<div class="container">
				<a class="navbar-brand" href="{{ path('car_list') }}">Arengi vehicle management</a>

				<div class="d-flex align-items-center gap-2">
					{% if app.user %}
						<span class="text-muted small">{{ app.user.userIdentifier }}</span>
						<a href="{{ logout_path() }}" class="btn btn-outline-secondary btn-sm">DÃ©connexion</a>
					{% else %}
						<a href="{{ path('app_login') }}" class="btn btn-outline-primary btn-sm">Connexion</a>
					{% endif %}
				</div>
			</div>
		</nav>

		{% block body %}{% endblock %}

		{% block javascripts %}
			<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
		{% endblock %}
	</body>
</html>
